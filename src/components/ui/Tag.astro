---
const { title, href } = Astro.props;
const TagElement = href ? "a" : "span";
---

<TagElement
  href={href}
  class="flex items-center rounded-md bg-accent/10 px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider text-accent border border-accent/20 hover:bg-accent/20 transition-colors duration-200 no-underline"
>
  {title}
</TagElement>
