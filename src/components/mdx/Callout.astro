---
const variants = {
  note: {
    styles:
      "bg-blue-50 border-blue-500 text-blue-900 dark:bg-blue-500/10 dark:border-blue-400 dark:text-blue-200",
    icon: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  tip: {
    styles:
      "bg-green-50 border-green-500 text-green-900 dark:bg-green-500/10 dark:border-green-400 dark:text-green-200",
    icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  },
  important: {
    styles:
      "bg-purple-50 border-purple-500 text-purple-900 dark:bg-purple-500/10 dark:border-purple-400 dark:text-purple-200",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
  },
  warning: {
    styles:
      "bg-yellow-50 border-yellow-500 text-yellow-900 dark:bg-yellow-500/10 dark:border-yellow-400 dark:text-yellow-200",
    icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
  },
  caution: {
    styles:
      "bg-red-50 border-red-500 text-red-900 dark:bg-red-500/10 dark:border-red-400 dark:text-red-200",
    icon: "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z",
  },
};

interface Props {
  type?: keyof typeof variants;
}

const { type = "note" } = Astro.props;
const { styles, icon } =
  variants[type as keyof typeof variants] || variants.note;
---

<div class={`rounded-md p-4 border-l-4 my-4 ${styles}`}>
  <div class="font-bold mb-2 flex items-center gap-2 text-lg">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d={icon}></path>
    </svg>
    <span class="capitalize">{type}</span>
  </div>
  <div class="text-sm md:text-base leading-relaxed opacity-90">
    <slot />
  </div>
</div>
