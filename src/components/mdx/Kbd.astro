---
// src/components/mdx/Kbd.astro
import { Icon } from "astro-icon/components";

const { name } = Astro.props;
---

<kbd
    class="inline-flex items-center px-1.5 py-0.5 text-[10px] font-semibold text-neutral-800 bg-neutral-100 border border-neutral-300 rounded shadow-[0_2px_0_rgba(0,0,0,0.1)] dark:bg-neutral-800 dark:text-neutral-200 dark:border-neutral-700 font-mono mx-1 align-middle uppercase tracking-wider"
>
    {name && <Icon name={name} class="w-3 h-3 mr-1" />}
    <slot />
</kbd>
