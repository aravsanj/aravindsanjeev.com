---
import { formatDate } from "@/lib/utils";
const { posts } = Astro.props;
const allBlogs = posts || [];
const sortedBlogs = allBlogs.sort(
  (a: any, b: any) =>
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime(),
);
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {
    sortedBlogs.map((post: any) => (
      <a href={`/${post.slug}`} class="group flex flex-col gap-4">
        <div class="aspect-video w-full rounded-xl bg-surface border border-white/5 overflow-hidden relative">
          {post.data.image ? (
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center text-secondary/50 font-mono text-sm">
              No Cover
            </div>
          )}
        </div>
        <div>
          <h3 class="text-xl font-bold text-primary group-hover:text-accent transition-colors leading-tight mb-2">
            {post.data.title}
          </h3>
          <p class="text-secondary text-sm line-clamp-2">{post.data.summary}</p>
        </div>
      </a>
    ))
  }
</div>
