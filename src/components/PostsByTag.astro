---
import Tag from "./ui/Tag.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type BlogEntry = CollectionEntry<'blog'>;

const { posts } = Astro.props;
const sortedBlogs = posts.sort(
  (a: BlogEntry, b: BlogEntry) =>
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime(),
);
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {
    sortedBlogs.map((post: BlogEntry) => {
      const tags = post.data.tags || [];
      return (
        <div class="group relative flex flex-col gap-6 p-6 rounded-2xl bg-surface border border-white/5 hover:border-accent/30 transition-all duration-300">
          <div class="aspect-video w-full rounded-xl bg-surface border border-white/5 overflow-hidden relative">
            {post.data.image ? (
              <Image
                src={post.data.image}
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-secondary/50 font-mono text-sm">
                No Cover
              </div>
            )}
          </div>
          <div class="flex flex-col flex-1">
            <h3 class="text-2xl font-bold text-primary mb-3 group-hover:text-accent transition-colors leading-tight">
              <a href={`/${post.slug}`} class="after:absolute after:inset-0">
                {post.data.title}
              </a>
            </h3>
            <p class="text-secondary text-base leading-relaxed mb-6 line-clamp-3">
              {post.data.summary}
            </p>
            <ul class="mt-auto flex flex-wrap gap-2 relative z-10">
              {tags.map((tag: string) => (
                <li>
                  <Tag title={tag} href={`/tag/${tag.toLowerCase()}`} />
                </li>
              ))}
            </ul>
          </div>
        </div>
      );
    })
  }
</div>
